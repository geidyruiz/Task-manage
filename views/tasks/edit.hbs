<h1>Edit Task Details</h1>

<form method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2">Name: *</label>
        <input name="name" id="name" required value="{{tasks.name}}"/>
    </fieldset>
    <!--<fieldset class="form-group">
        <label class="control-label col-md-2">Complete: *</label>
        <checkbox name="complete" id="complete" />
    </fieldset>-->
    <fieldset class="form-group">
        <label class="control-label col-md-2">Priority: *</label>
        <select name="priority" id="priority">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </fieldset>
    <button class="col-md-offset-2 btn-primary">Save</button>
</form>
